page {
  background: #f6f6f6;
}

.searchBox {
  width: 80%;
  margin-left: 10%;
  margin-top: 3%;
  background: #fff;
}

.focusTab{
  width: 100%;
  height: 100%;
  position: relative;
  /* border: 1rpx solid red; */
}

.topTab {
  display: flex;
  flex-direction: column;
  margin-top: 3%;
}

.tabItem {
  flex: 1;
  width: 25%;
  height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.selected {
  width: 100%;
  height: 100rpx;
  color: #000;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.right{
  width: 75%;
  height: 100%;
  background: #fff;
  position: absolute;
  top: 0;
  right: 0;
}

.tag {
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  background: #fff;
  margin-left: 26rpx;
}

.dragText{
  background: #ff0000;
}

.noData{
  text-align: center;
  color: #888;
  font-size: 30rpx;
  padding-top: 5%;
}