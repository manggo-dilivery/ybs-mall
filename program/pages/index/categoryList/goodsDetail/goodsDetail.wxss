.contentNum text:nth-child(4){
    display: block;
    background: #fff;
    width:50rpx;
    height: 42rpx;
    font-size:30rpx;
    line-height: 34rpx;
    text-align: center;
    border-top-right-radius:15rpx;
    border-bottom-right-radius:15rpx;
    color:#aaa;
    border:1rpx solid #ddd;
}
/* 详情 */
.contentDetail{
    background: #fff;
    margin-top:20rpx;
    width:100%;
}
.contentTitle{
    width:100%;
    text-align: center;
    border-bottom:2rpx solid #eee;
}
.detailImage{
    width:100%;
}
.active{
    background: #f13558;
    padding:0 12rpx;
    border-radius:20rpx;
    color:#fff;
    margin-right: 20rpx;
}
/* 加入购物车 */
.bottom{
    width:100%;
    height: 80rpx;
    border-top:1rpx solid #ccc;
    background: #fff;
    position: fixed;
    bottom:0;
    left:0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.bottomBar image{
    width:36rpx;
    height: 36rpx;
    display: block;
    margin:0 auto;
}
.bottomFc{
    display: flex;
    align-items: center;
    width:430rpx;
    justify-content: space-around;
}
.bottomFc text{
    display: block;
    font-size:22rpx;
}
.bottomBar{
    width:80rpx;
    text-align: center;
}
.addToShopCar{
    width: 280rpx;
    background:linear-gradient(to right,#ff677e,#ea1859);
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.shopText{
    text-align: center;
    
}
.text1{
    padding: 0 10rpx;
    font-size:34rpx;
}
