/* pages/goodsDetail/goodsDetail.wxss */
page{
    background: #e2e2e2;
    width:100%;
}
.title{
    width:100%;
    margin:0 auto;
    background: #fff;
    padding: 20rpx 0 20rpx 0;
}
.title text{
    display: block;
    margin-top:10rpx;
    margin-left:20rpx;
}
.title text:first-child{
    font-size:32rpx;
    font-weight: bold;
    color:#444;
    margin-top:0;
}
.title text:nth-child(2){
    font-size:26rpx;
}
.title text:nth-child(3){
    color:#f13558;
}
/* 规格 */
.weight{
    width:100%;
    margin-top:20rpx;
    background: #fff;
    padding: 20rpx 0;
}
.guigeText{
    margin-left:20rpx;
    color:#444;
    margin-right: 26rpx;
}
.changeWeight{
    background: #bbb;
    padding:0 12rpx;
    border-radius:20rpx;
    color:#fff;
    margin-right: 20rpx;
}
.contentNum{
    display: flex;
    align-items: center;
    margin-top:20rpx;
}
.contentNum text:first-child{
    margin-left:20rpx;
    margin-right: 25rpx;
    color:#444;
}
.contentNum text:nth-child(2){
    display: block;
    width:50rpx;
    height: 42rpx;
    font-size:34rpx;
    line-height: 40rpx;
    text-align: center;
    border-top-left-radius:8rpx;
    border-bottom-left-radius:8rpx;
    color:#aaa;
    border:1rpx solid #ddd;
}
.contentNum text:nth-child(3){
    display: block;
    background: #fff;
    width:60rpx;
    height: 42rpx;
    font-size:26rpx;
    line-height: 40rpx;
    text-align: center;
    color:#555;
    margin:0 2rpx;
    border:1rpx solid #ddd;
}
