/* pages/center/orders/orders.wxss */
page{
  background: #f6f6f6;
  width: 100%;
  height: 100%;
}

.myorders{
  background: #fff;
  width: 100%;
  height: 60rpx;
  margin-top: 4rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 30rpx;
}

.tabItem{
  width: 25%;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
}

.selected{
  width:100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  text-align: center;
  color: #ff0000;
  border-bottom: 4rpx solid #ff0000;
}

.orders-list{
  width: 100%;
  height: 380rpx;
  background: #fff;
  margin-top: 4rpx;
}

.shop-name{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.store{
  width: 40rpx;
}

.time{
  font-size: 26rpx;
  color: #6b6b6b;
  display: flex;
  justify-content: flex-end;
  margin-right: 20rpx;
  align-items: center;
}

.goods{
  width: 100%;
  height: 180rpx;
  margin-top: 26rpx;
  background: #ebebeb;
  display: flex;
  align-items: center;
}

.goods-li{
  height: 160rpx;
  width: 96%;
  display: inline-block;
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.goods-img{
  width: 160rpx;
  height: 160rpx;
  background: #fff;
  margin-left: 20rpx;
}

.obligation{
  display: flex;
  flex-direction: row;
}

.toPay{
  font-size: 26rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 2rpx 10rpx;
  border: 1rpx solid #6b6b6b;
  border-radius: 25rpx;
  margin-left: 20rpx;
}