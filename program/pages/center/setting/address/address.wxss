/* pages/center/setting/address/address.wxss */

text {
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

page {
  background: #f6f6f6;
  padding-bottom: 120rpx;
}

.address {
  background: #fff;
  width: 100%;
  margin-top: 20rpx;
}

.address-li {
  height: 120rpx;
  width: 100%;
  border-bottom: 1rpx solid #f6f6f6;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.common-img {
  margin-right: 20rpx;
}

.add-address {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to right, #fe6479, #ee2460);
  color: #fff;
  font-size: 30rpx;
}

.label {
  line-height: 100%;
  text-align: center;
  font-size: 26rpx;
  border-radius: 8rpx;
  color: #fff;
  background: #ee2460;
  margin-right: 20rpx;
  padding: 10rpx;
}

button::after {
  border: none;
}

.addr{
  height: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
}