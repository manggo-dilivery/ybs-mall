/* pages/center/coupon/coupon.wxss */

page {
  background: #efefef;
}

text {
  font-size: 26rpx;
  font-weight: 400;
  display: block;
}

.mycoupon {
  background: #fff;
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 30rpx;
  border-top: 1rpx solid #efefef;
  position: fixed;
  top: 0;
  border-bottom: 1rpx solid #efefef;
}

.tabItem {
  width: 25%;
  text-align: center;
  line-height: 60rpx;
}

.selected {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #f00;
  border-bottom: 4rpx solid #f00;
}

.right {
  width: 100%;
  height: 100%;
  margin-top: 76rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tag {
  width: 96%;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 60rpx;
}

.coupon {
  width: 70%;
  height: 100%;
  background: #fff;
  border-radius: 18rpx;
  font-size: 34rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 3%;
}

.li-right{
  width:30%;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}