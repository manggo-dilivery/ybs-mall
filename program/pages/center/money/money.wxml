<!--pages/center/money/money.wxml-->
<view class='container'>
  <!--头部背景图片-->
  <image src='../../../images/Union1.png' mode='widthFix' style='width:100%;'></image>
  <!--余额-->
  <view style='position: absolute;top: 0;width:100%;'>
    <view class='number'>
      <text style='font-size:60rpx;'>{{money}}</text>
      <text style='font-size:20rpx;'>我的余额(元)</text>
    </view>
  </view>
  <!---->
  <view class='detail'>
    <view bindtap='toDetail' class='detail-li'>
      <image src='../../../images/icon/Group338.png' class='common-img' mode='widthFix'></image>
      <text style='color:#000;font-size:28rpx;'>交易明细</text>
    </view>
    <view style='width:1rpx;height:100rpx;border-left:1rpx solid #efefef;margin-top:10rpx;'></view>
    <view bindtap='toBankcard' class='detail-li'>
      <image src='../../../images/icon/Group339.png' class='common-img' mode='widthFix'></image>
      <text style='color:#000;font-size:28rpx;'>绑定银行卡</text>
    </view>
  </view>
  <!--我的银行卡-->
  <view class='mycard'>
    <view class='line'></view>
    <view style='font-size:30rpx;color:#888;margin-left:20rpx;margin-right:20rpx;'>我的银行卡</view>
    <view class='line'></view>
  </view>

  <!--充值按钮-->
  <view class='pay' bindtap='toPay'>
    <image src='../../../images/headerbg.png' style='width:100%;height:100%;'></image>
    <text class='pay-text'>立即充值</text>
  </view>
</view>