/**app.wxss**/

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

p {
  font-size: 30rpx;
}

text {
  font-size: 30rpx;
  color: #888;
}

.searchBox {
  background: #fff;
  width: 65%;
  height: 50rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  margin-left: 90rpx;
}

.search_image {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.input_placeholder {
  font-size: 25rpx;
  color: #bbb;
}

.dragText {
  margin-right: 60rpx;
  margin-left: 30rpx;
  color: #fff;
  border: 2rpx solid #fff;
  padding: 5rpx 6rpx;
  width: 64rpx;
  border-radius: 30rpx;
  font-size: 25rpx;
  text-align: center;
  background: #f2365a;
}

.common-img {
  width: 50rpx;
}

.word {
  font-size: 30rpx;
  color: #888;
}

.save {
  width: 90%;
  height: 80rpx;
  border-radius: 40rpx;
  color: #fff;
  font-size: 32rpx;
  margin-top: 40rpx;
  background: linear-gradient(to right, #fe6479, #ee2460);
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}